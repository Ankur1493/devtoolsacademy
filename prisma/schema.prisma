datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  slug     String    @id
  views    Int       @default(0)
  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  postSlug  String
  createdAt DateTime @default(now())
  userId    String
  post      Post     @relation(fields: [postSlug], references: [slug])
}

model BlogUser {
  id    String @id @default(uuid())
  name  String
  email String @unique
}
