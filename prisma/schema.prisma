datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma.ts-client-js"
}

model Post {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  content   String
  views     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}